<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/large_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_text_size"
        android:background="@drawable/large_button_background"
        android:textColor="@color/large_button_color" />

    <TextView
        android:id="@+id/medium_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/small_text"
        android:background="@drawable/small_button_drawable"
        android:textColor="@color/small_button_color"
        android:layout_width="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:layout_height="wrap_content" />

</LinearLayout>