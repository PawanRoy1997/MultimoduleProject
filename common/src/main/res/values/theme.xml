<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LargeTextView">
        <item name="android:textColor">#1A237E</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
        <item name="android:text">@string/large_text</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:padding">@dimen/custom_padding</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="MediumTextView">
        <item name="android:background">#3949AB</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/oxygen_regular</item>
        <item name="android:text">@string/medium_text</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:padding">@dimen/custom_padding</item>
    </style>

    <style name="SmallTextView">
        <item name="android:fontFamily">@font/oxygen_light</item>
        <item name="android:text">@string/small_text</item>
        <item name="android:background">#fff</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/custom_padding</item>
    </style>
</resources>